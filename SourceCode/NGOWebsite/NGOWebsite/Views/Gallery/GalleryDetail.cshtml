@{
    ViewBag.Title = "GalleryDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model IEnumerable<Models.ImageGallery>


<style type="text/css">
    .containerImg ul {
        padding: 0 0 0 0;
        margin: 0 0 0 0;
    }

        .containerImg ul li {
            list-style: none;
            margin-bottom: 25px;
        }

            .containerImg ul li img {
                cursor: pointer;
                width: 165px;
                height: 165px;
            }

    .modal-body {
        padding: 5px !important;
    }

    .modal-content {
        border-radius: 0;
    }

    .modal-dialog img {
        text-align: center;
        margin: 0 auto;
    }

    .controls {
        width: 50px;
        display: block;
        font-size: 11px;
        padding-top: 8px;
        font-weight: bold;
    }

    .next {
        float: right;
        text-align: right;
    }

    .previous {
        float: left;
        text-align: left;
    }

    /*override modal for demo only*/
    .modal-dialog {
        max-width: 500px;
        padding-top: 90px;
    }
</style>
<div class="row" style="margin-top: 10px;width:1200px;margin:0px auto">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="containerImg">
                <div class="col-md-12 text-center heading dark animate_top">Gallery "<span>@Html.DisplayName(ViewData["program"].ToString())</span>"</div>
                <ul class="row text-center">
                    @foreach (var img in Model)
                    {
                    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
                        <img id="@img.Id" class="img-responsive" src="~/@img.ImagePath" width="300px" height="300px" />
                    </li>
                    }
                </ul>
            </div>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Content/View_components/js/photo-gallery.js")" type="text/javascript"></script>
}