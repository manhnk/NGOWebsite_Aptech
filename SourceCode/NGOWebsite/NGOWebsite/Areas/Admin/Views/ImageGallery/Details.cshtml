@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.ImageGallery

<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-image  fa-fw"></i> Image Details
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.ProgramName)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.ProgramName)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.ImagePath)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.ImagePath)
                                </td>
                            </tr>

                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.IsTopicImage)
                                </th>
                                <td>
                                    @if (Model.IsTopicImage == 1)
                                    {
                                        @Html.DisplayName("Yes")
                                    }
                                    else
                                    {
                                        @Html.DisplayName("No")
                                    }
                                </td>
                            </tr>

                        </table>
                        <img src="~/@Model.ImagePath" width="300px" height="300px" />
                    </div>
                    <div class="col-lg-4">
                        <a class="btn btn-primary" style="width:120px" href="@Url.Action("Edit", "ImageGallery", new { id = Model.Id })"><i class="fa fa-edit  fa-fw"></i> Update </a><br />
                        <a class="btn btn-danger" style="margin-top:15px;width:120px" href="@Url.Action("Delete", "ImageGallery", new { @id = Model.Id })" onclick="return confirm('Are you sure?');"><i class="fa fa-times-circle  fa-fw"></i> Delete </a><br />
                        <a class="btn btn-success" style="margin-top:15px;width:120px" href="@Url.Action("Index", "ImageGallery")"><i class="fa fa-mail-reply  fa-fw"></i> Back to list </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
