@{
    ViewBag.Title = "SlideEdit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.ImageGallery

<!-- /.row -->
<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-image  fa-fw"></i> Update Silde Image
            </div>
            <div class="panel-body">
                <div class="row">

                    @using (Html.BeginForm("SlideEditProcess", "ImageGallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(model=>model.Id)
                        @Html.HiddenFor(model=>model.ImagePath)
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="col-lg-8">
                            <div class="form-group">
                                <img src="~/@Model.ImagePath" width="660px" height="360px"/>
                            </div>
                            <div class="form-group">
                                <input type="file" class="form-control" id="file" name="file" accept=".png,.gif,.jpg" />
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PositionInSilde)
                                @Html.TextBoxFor(model => model.PositionInSilde, new { @class = "form-control", @placeholder = "Enter number",@maxlength="2" })
                                @Html.ValidationMessageFor(model => model.PositionInSilde)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description)
                                @Html.TextAreaFor(model => model.Description, 5, 10, new { @class = "form-control", @placeholder = "Enter text" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <button type="submit" class="btn btn-primary" style="margin-left:20px;margin-top:25px;width:120px"><i class="fa fa-edit  fa-fw"></i> Update </button><br />
                            <a href="@Url.Action("ListSlide","ImageGallery")" class="btn btn-primary" style="margin-left: 20px;margin-top: 15px; width: 120px"><i class="fa  fa-mail-reply fa-fw"></i> Cancel </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}




