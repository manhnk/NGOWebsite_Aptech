@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.Donation
@{
    string type = ViewData["Type"].ToString();
}

@{ Models.Admin ad = new Models.Admin();}

@if (Session["mvc_user"] != null)
{
    ad = Session["mvc_user"] as Models.Admin;
}

<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                @if (type == "program")
                {
                    <i class="fa fa-cube  fa-fw"></i> @Html.DisplayName("Donation Details")
                }
                else
                {
                    <i class="fa fa-bank  fa-fw"></i> @Html.DisplayName("Donation Details")
                }
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.FullNameDonator)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.FullNameDonator)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.GenderDonator)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.GenderDonator)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.EmailDonator)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.EmailDonator)
                                </td>
                            </tr>
                            <tr>
                                @if (type == "program")
                                {
                                    <th>
                                        @Html.LabelFor(model => model.Program)
                                    </th>
                                    <td>
                                        @Html.DisplayTextFor(model => model.Program)
                                    </td>
                                }
                                else
                                {
                                    <th>
                                        @Html.LabelFor(model => model.CauseOfDonation)
                                    </th>
                                    <td>
                                        @Html.DisplayTextFor(model => model.CauseOfDonation)
                                    </td>
                                }

                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.DateOfDonation)
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.DateOfDonation)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.CreditType)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.CreditType)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.CardNumber)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.CardNumber)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Amount)
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.Amount)<i class="fa fa-dollar fa-fx" ></i>
                                </td>
                            </tr>
                        </table>

                    </div>
                    <div class="col-lg-4">
                        @if (type == "program")
                        {
                            <a class="btn btn-success" style="width:120px" href="@Url.Action("DonationDetails", "Donation", new {id=Model.ProgramId,flag=type})"><i class="fa fa-mail-reply  fa-fw"></i> Back to list </a>
                        }
                        else
                        {
                            <a class="btn btn-success" style="width:120px" href="@Url.Action("DonationDetails", "Donation", new {id=Model.CauseId,flag=type})"><i class="fa fa-mail-reply  fa-fw"></i> Back to list </a>
                        }
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>