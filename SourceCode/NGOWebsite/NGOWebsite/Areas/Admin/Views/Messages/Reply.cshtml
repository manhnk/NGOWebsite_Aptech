@{
    ViewBag.Title = "Reply";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.Message

<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-th-list  fa-fw"></i> Send Mail
            </div>
            <div class="panel-body">
                <div class="row">

                    @using (Html.BeginForm("ReplyProcess", "Messages", FormMethod.Post))
                    {
                        @Html.HiddenFor(model=>model.Id)
                        @Html.HiddenFor(model=>model.SenderName)
                        @Html.HiddenFor(model=>model.SenderEmail)
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label> To : </label>
                                @Html.TextBoxFor(model => model.SenderEmail, new { @class = "form-control", @disabled="disabled"})
                                @Html.ValidationMessageFor(model => model.SenderEmail)
                            </div>
                            <div class="form-group">
                                <label> Content : </label>
                                @Html.TextAreaFor(model => model.MessageReply, new { @class="form-control",@placeholder="Enter text",@rows="10",@maxlength="400"})
                                @Html.ValidationMessageFor(model => model.MessageReply)
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary" style="margin-top:25px;width:120px"><i class="fa fa-forward  fa-fw"></i> Send Mail </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
