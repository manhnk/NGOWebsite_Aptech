@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.CauseOfDonation

<!-- /.row -->
<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-th  fa-fw"></i> Add New Cause
            </div>
            <div class="panel-body">
                <div class="row">

                    @using (Html.BeginForm("CreateProcess", "CauseOfDonation", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description)
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                            <div class="form-group">
                                <label>@Html.CheckBox("cbIsFieldOfProgram", new { @Value = "rmb" }) Is Field Of Program </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-primary" style="margin-top:25px;width:120px"><i class="fa fa-plus-circle  fa-fw"></i> Add New </button><br/>
                            <button type="reset" class="btn btn-primary" style="margin-top: 15px; width: 120px"><i class="fa  fa-refresh  fa-fw"></i> Reset </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


