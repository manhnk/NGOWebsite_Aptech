@model Models.Admin

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@{ Models.Admin ad = new Models.Admin();}

@if (Session["mvc_user"] != null)
{
    ad = Session["mvc_user"] as Models.Admin;
}
<!-- /.row -->
<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-user  fa-fw"></i> Admin Details
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.UserName)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.UserName)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.FullName)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.FullName)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Gender)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Gender)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Phone)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Phone)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Address)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Address)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Email)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Email)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.IsActived)
                                </th>
                                <td>
                                    @if (Model.IsActived)
                                    {
                                        @Html.DisplayName("Yes")
                                    }
                                    else
                                    {
                                        @Html.DisplayName("No")
                                    }
                                </td>
                            </tr>
                        </table>

                    </div>
                    <div class="col-lg-4">

                        @if (ad.IsSuperAdmin)
                        {
                        <a class="btn btn-primary" style="width:120px" href="@Url.Action("Edit", "Admin", new { id = Model.Id })"><i class="fa fa-plus-circle  fa-fw"></i> Update </a><br />
                        <a class="btn btn-danger" style="margin-top:15px;width:120px" href="@Url.Action("Delete", "Admin", new { @id = Model.Id })"><i class="fa fa-times-circle  fa-fw"></i> Delete </a><br />
                        }
                        else if (ad.Id == Model.Id)
                        {
                        <a class="btn btn-primary" style="width:120px" href="@Url.Action("Edit", "Admin", new { id = Model.Id })"><i class="fa fa-plus-circle  fa-fw"></i> Update </a><br />
                        }

                        <a class="btn btn-success" style="margin-top:15px;width:120px" href="@Url.Action("ListAdmin", "Admin")"><i class="fa fa-mail-reply  fa-fw"></i> Back to list </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>