@{
    ViewBag.Title = "ListAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Models.Admin>
@using Models

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>




<div class="row">
    
    <div class="col-lg-12">
        @{
            if (Request.QueryString.Count > 0)
            {
                string key = Request.QueryString.GetKey(0);
                string value = Request.QueryString.Get(0);
                switch (value)
                {
                    case "success":
                        <div class="alert alert-success" style="text-align:center;margin-top:30px;margin-bottom:-10px">
                            <i class="fa fa-check-circle  fa-fw"></i> Successfull !
                        </div>

                        break;
                    case "error":
                    <div class="alert alert-danger" style="text-align: center; margin-top: 30px; margin-bottom: -10px">
                        <i class="fa fa-times-circle  fa-fw"></i> Something went wrong !
                    </div>
                        break;
                }
            }
        }
    </div>

</div>
<!-- /.row -->
<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-user  fa-fw"></i> List Admin
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                                <th>@Html.DisplayNameFor(model => model.IsActived)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                    <td style="text-align:center">
                                        @if (item.IsActived)
                                        {
                                            <span style="color:green">@Html.DisplayName("Active")</span><span style="float:right"><a href="@Url.Action("ChangeStatus", "Admin", new { @id=item.Id})" title="Change Status"><i class="fa  fa-retweet fa-fw"></i></a></span>                                        }
                                        else
                                        {
                                            <span style="color:red">@Html.DisplayName("Not Active")</span><span style="float:right"><a href="@Url.Action("ChangeStatus", "Admin", new { @id=item.Id})" title="Change Status"><i class="fa  fa-retweet fa-fw"></i></a></span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Admin", new { id=item.Id})" title="View Detail"><i class="fa fa-search-plus  fa-fw"></i></a>
                                        <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" title="Update"><i class="fa fa-edit  fa-fw"></i></a>
                                        <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" title="Delete"><i class="fa fa-eraser  fa-fw"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" href="@Url.Action("Create","Admin")"><i class="fa fa-plus-circle  fa-fw"></i>Add New Admin</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


