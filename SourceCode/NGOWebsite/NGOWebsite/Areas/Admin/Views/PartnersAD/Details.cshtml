@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.Partners

<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-group  fa-fw"></i> Partner Details
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        <img src="~/@Model.Logo" width="200px" height="200px" />
                    </div>
                    <div class="col-lg-8">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Name)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Name)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Address)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Address)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Phone)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Phone)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Email)
                                </th>
                                <td>
                                    @Html.DisplayTextFor(model => model.Email)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.LabelFor(model => model.Profile)
                                </th>
                                <td>
                                    @Html.Raw(Model.Profile)
                                </td>
                            </tr>

                        </table>

                    </div>
                </div>
                <div class="col-lg-12">
                    <a class="btn btn-primary" style="margin-top: 25px; width: 120px" href="@Url.Action("Edit", "PartnersAD", new { id = Model.Id })"><i class="fa fa-edit  fa-fw"></i> Update </a>
                    <a class="btn btn-danger" style="margin-top:25px;margin-left:20px;width:120px" href="@Url.Action("Delete", "PartnersAD", new { @id = Model.Id })" onclick="return confirm('Are you sure?');"><i class="fa fa-times-circle  fa-fw"></i> Delete </a>
                    <a class="btn btn-success" style="margin-top: 25px; margin-left: 20px; width: 120px" href="@Url.Action("ListPartner", "PartnersAD")"><i class="fa fa-mail-reply  fa-fw"></i> Back to list </a>
                </div>
            </div>
        </div>
    </div>
</div>