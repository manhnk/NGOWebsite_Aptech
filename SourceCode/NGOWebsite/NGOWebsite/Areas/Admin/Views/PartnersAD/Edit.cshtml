@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.Partners

<!-- /.row -->
<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-group  fa-fw"></i> Update Partner
            </div>
            <div class="panel-body">
                <div class="row">

                    @using (Html.BeginForm("EditProcess", "PartnersAD", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "50" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Address)
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone)
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @maxlength = "15", @placeholder = "Enter text" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.Profile)
                                @Html.TextAreaFor(model => model.Profile, new { @class = "form-control ckeditor", @placeholder = "Enter text", @id = "ckeditorId", @rows = "10" })
                                @Html.ValidationMessageFor(model => model.Profile)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <img src="~/@Model.Logo" width="200px" height="200px" /> <br/>
                                @Html.TextBoxFor(model => model.Logo, new { @class = "form-control", @type = "file", @accept = ".png,.gif,.jpg" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <button type="submit" class="btn btn-primary" style="margin-top:25px;width:120px"><i class="fa fa-plus-circle  fa-fw"></i> Add New </button><br />
                            <button type="reset" class="btn btn-primary" style="margin-top: 15px; width: 120px"><i class="fa  fa-refresh  fa-fw"></i> Reset </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Areas/Admin/Contents/ckeditor/ckeditor.js")" type="text/javascript"></script>

}




