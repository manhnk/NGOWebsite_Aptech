@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Models.Member

<!-- /.row -->
<div class="row" style="margin-top:30px">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="font-weight:bold">
                <i class="fa fa-user  fa-fw"></i> Add New Member
            </div>
            <div class="panel-body">
                <div class="row">

                    @using (Html.BeginForm("CreateProcess", "Member", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName)
                                <input type="text" id="UserName" class="form-control" placeholder="Enter text" maxlength="50" />
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "50" })
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FullName)
                                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "50" })
                                @Html.ValidationMessageFor(model => model.FullName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone)
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "15" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Gender) &nbsp;&nbsp;&nbsp;&nbsp;
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Gender, "Male") Male
                                </label>
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Gender, "Female") Female
                                </label>
                                &nbsp;&nbsp;&nbsp;&nbsp;@Html.ValidationMessageFor(model => model.Gender)
                            </div>

                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Address)
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter text", @maxlength = "100" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                <label>@Html.CheckBox("cbIsMemberOfTeam", new { @Value = "rmb" }) Join Team </label>
                            </div>
                        </div>
                        <h1></h1>
                            <!-- /.col-lg-12 -->
                        <div class="col-lg-12">

                            <button type="submit" class="btn btn-primary"><i class="fa fa-plus-circle  fa-fw"></i> Add New </button>
                            <button type="reset" class="btn btn-primary" style="margin-left:50px"><i class="fa  fa-refresh  fa-fw"></i> Reset </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#UserName").blur(function () {
            $.ajax({
                type: 'post',
                url: '/Admin/Member/CheckNameExist',
                dataType: 'json',
                contentType: 'application/json;charset=utf-8',
                data: '{username:' + $(this).val() + ',id:'+null+'}',
                success: function (data) {

                },
                error: function () {
                    alert("Cannot load data");
                }
            });
        });

       
    </script>
}


